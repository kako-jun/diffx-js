{
  "name": "diffx-js-tests",
  "version": "1.0.0",
  "description": "Unified API tests for diffx-js",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "DEBUG_TESTS=1 jest --verbose",
    "test:ci": "jest --ci --coverage --passWithNoTests"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "babel-jest": "^29.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "16"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js"],
    "bail": true,
    "forceExit": true,
    "detectOpenHandles": true
  }
}